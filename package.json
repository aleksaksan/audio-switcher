{
  "author": "aleksan",
  "description": "Audio Device Switcher Application",
  "name": "audio-switcher",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/electron/main.js",
  "scripts": {
    "dev": "run-p dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "prebuild": "node scripts/copy-preload.js && node scripts/copy-icons.js",
    "build": "npm run prebuild && vite build && electron-builder --win --linux",
    "build:win": "npm run prebuild && vite build && electron-builder --win",
    "build:linux": "npm run prebuild && vite build && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.6",
    "@types/os-utils": "^0.0.4",
    "daisyui": "^5.0.35",
    "http": "^0.0.1-security",
    "loudness": "^0.4.2",
    "os-utils": "^0.0.14",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.6",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "vite": "^6.3.5"
  }
}
